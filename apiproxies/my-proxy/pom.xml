<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.apigee</groupId>
  <artifactId>my-proxy</artifactId>
  <version>1.0.0</version>
  <packaging>pom</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>com.google.apigee</groupId>
        <artifactId>apigee-config-maven-plugin</artifactId>
        <version>1.2.0</version>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>deploy</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.google.apigee</groupId>
            <artifactId>apigee-config-maven-plugin</artifactId>
            <version>1.2.0</version>
            <configuration>
              <org>${apigee.org}</org>
              <env>${apigee.env}</env>
              <bearer>${apigee.bearer}</bearer>
              <proxyPath>apiproxy</proxyPath>
              <override>true</override>
            </configuration>
            <executions>
              <execution>
                <phase>install</phase>
                <goals>
                  <goal>apiproxydeploy</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
